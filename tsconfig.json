{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // other options...
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "Components/*"
      ],
      "@layout/*": [
        "Layout/*"
      ],
      "@utils/*": [
        "Utils/*"
      ],
      "@services/*": [
        "Services/*"
      ],
    }
  },
  "include": [
    "src"
  ]
}